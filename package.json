{
  "name": "spotify-back-office",
  "description": "Spotify clone using Next.js",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "type:check": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch",
    "docker:build": "docker build -t spotify-clone .",
    "docker:run": "docker run --name spotify-clone -p 3000:3000 spotify-clone",
    "docker:run:detach": "docker run --name spotify-clone -d -p 3000:3000 spotify-clone",
    "docker:stop": "docker stop $(docker ps -a -q)",
    "docker:clean": "docker system prune -a"
  },
  "dependencies": {
    "next": "15.0.3",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "react-simple-pull-to-refresh": "^1.3.3",
    "sass": "^1.83.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,css,ts,tsx,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
